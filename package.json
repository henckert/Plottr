{
  "name": "plottr-backend",
  "version": "0.1.0",
  "private": true,
  "type": "commonjs",
  "scripts": {
    "build": "tsc -p .",
    "start": "node ./dist/index.js",
    "dev": "ts-node -r tsconfig-paths/register src/index.ts",
    "migrate": "knex --knexfile src/db/knexfile.ts migrate:latest",
    "migrate:rollback": "knex --knexfile src/db/knexfile.ts migrate:rollback",
    "seed": "knex --knexfile src/db/knexfile.ts seed:run",
    "db:reset": "knex --knexfile src/db/knexfile.ts migrate:rollback --all && knex --knexfile src/db/knexfile.ts migrate:latest && knex --knexfile src/db/knexfile.ts seed:run",
    "db:seed": "knex --knexfile src/db/knexfile.ts seed:run",
    "db:migrate": "knex --knexfile src/db/knexfile.ts migrate:latest",
    "test": "jest",
    "test:unit": "jest --runInBand --testPathIgnorePatterns=\"tests/integration|tests/migrations\" --passWithNoTests",
    "test:migrations": "cross-env NODE_ENV=test jest tests/migrations/migrations.test.ts --runInBand -i",
    "gen:types": "openapi-typescript openapi/plottr.yaml --output src/types/openapi.ts",
    "check:types": "tsc -p tsconfig.build.json --noEmit",
    "test:integration": "cross-env NODE_ENV=test jest tests/integration --runInBand -i"
  },
  "lint-staged": {
    "src/**/*.{ts,js}": [
      "npm run check:types"
    ],
    "tests/**/*.{ts,js}": [
      "npm test -- --silent"
    ]
  },
  "prepare": "husky install",
  "dependencies": {
    "@clerk/backend": "^2.18.3",
    "@mapbox/mapbox-sdk": "^0.13.0",
    "aws-sdk": "^2.0.0",
    "dotenv": "^10.0.0",
    "express": "^4.18.2",
    "express-rate-limit": "^8.1.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.0",
    "knex": "^2.0.0",
    "objection": "^3.0.0",
    "openai": "^4.10.0",
    "pg": "^8.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/jest": "^29.0.0",
    "@types/knex": "^0.16.1",
    "@types/mapbox__mapbox-sdk": "^0.16.3",
    "@types/node": "^18.0.0",
    "@types/node-fetch": "^2.6.2",
    "@types/pg": "^8.6.6",
    "@types/supertest": "^2.0.12",
    "cross-env": "^10.1.0",
    "eslint": "^8.0.0",
    "husky": "^8.0.0",
    "jest": "^29.0.0",
    "lint-staged": "^14.0.0",
    "node-fetch": "^2.6.7",
    "openapi-typescript": "^7.10.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.0.0",
    "tsyringe": "^4.7.0",
    "typescript": "^5.0.0",
    "zod": "^3.22.2"
  }
}
