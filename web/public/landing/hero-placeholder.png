<svg width="800" height="600" viewBox="0 0 800 600" xmlns="http://www.w3.org/2000/svg">
  <!-- Placeholder hero image showing a stylized map with pitches -->
  <defs>
    <linearGradient id="bg-gradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#EFF6FF"/>
      <stop offset="100%" style="stop-color:#DBEAFE"/>
    </linearGradient>
  </defs>
  
  <!-- Background -->
  <rect width="800" height="600" fill="url(#bg-gradient)"/>
  
  <!-- Stylized map grid -->
  <g opacity="0.3">
    <line x1="0" y1="150" x2="800" y2="150" stroke="#94A3B8" stroke-width="1"/>
    <line x1="0" y1="300" x2="800" y2="300" stroke="#94A3B8" stroke-width="1"/>
    <line x1="0" y1="450" x2="800" y2="450" stroke="#94A3B8" stroke-width="1"/>
    <line x1="200" y1="0" x2="200" y2="600" stroke="#94A3B8" stroke-width="1"/>
    <line x1="400" y1="0" x2="400" y2="600" stroke="#94A3B8" stroke-width="1"/>
    <line x1="600" y1="0" x2="600" y2="600" stroke="#94A3B8" stroke-width="1"/>
  </g>
  
  <!-- Sample pitches -->
  <rect x="150" y="180" width="200" height="130" rx="8" fill="#10B981" opacity="0.6" stroke="#059669" stroke-width="3"/>
  <rect x="450" y="180" width="200" height="130" rx="8" fill="#3B82F6" opacity="0.6" stroke="#2563EB" stroke-width="3"/>
  <rect x="150" y="370" width="200" height="130" rx="8" fill="#F59E0B" opacity="0.6" stroke="#D97706" stroke-width="3"/>
  
  <!-- Labels -->
  <text x="250" y="250" text-anchor="middle" font-family="system-ui" font-size="18" font-weight="600" fill="#065F46">Pitch A</text>
  <text x="550" y="250" text-anchor="middle" font-family="system-ui" font-size="18" font-weight="600" fill="#1E40AF">Pitch B</text>
  <text x="250" y="440" text-anchor="middle" font-family="system-ui" font-size="18" font-weight="600" fill="#92400E">Training</text>
  
  <!-- Map pin markers -->
  <circle cx="250" cy="120" r="8" fill="#DC2626"/>
  <path d="M250 110 L250 120" stroke="#DC2626" stroke-width="3" stroke-linecap="round"/>
  
  <!-- Watermark -->
  <text x="400" y="580" text-anchor="middle" font-family="system-ui" font-size="14" fill="#64748B" opacity="0.5">
    PlotIQ Demo Layout
  </text>
</svg>
