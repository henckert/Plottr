{
  "version": 8,
  "name": "PlotIQ Night Survey",
  "glyphs": "https://demotiles.maplibre.org/font/{fontstack}/{range}.pbf",
  "sources": {
    "osm": {
      "type": "vector",
      "tiles": ["https://tiles.openfreemap.org/planet/{z}/{x}/{y}.pbf"],
      "minzoom": 0,
      "maxzoom": 14,
      "attribution": "Â© OpenStreetMap contributors"
    }
  },
  "layers": [
    { "id": "background", "type": "background", "paint": { "background-color": "#0f1115" } },
    { "id": "water", "type": "fill", "source": "osm", "source-layer": "water",
      "paint": { "fill-color": "#112233", "fill-opacity": 0.9 } },
    { "id": "landuse", "type": "fill", "source": "osm", "source-layer": "landuse",
      "paint": {
        "fill-color": [
          "match", ["get","class"],
          "farmland", "#1a2017",
          "grass", "#172018",
          "forest", "#132016",
          "residential", "#181b20",
          "industrial", "#1a1c20",
          "#14171c"
        ],
        "fill-opacity": 0.9
      }
    },
    { "id": "building", "type": "fill", "source": "osm", "source-layer": "building",
      "paint": { "fill-color": "#1f2430", "fill-opacity": 0.7, "fill-outline-color": "#2a3140" } },
    { "id": "road-outline", "type": "line", "source": "osm", "source-layer": "transportation",
      "paint": { "line-color": "#2b3342", "line-width": ["interpolate",["linear"],["zoom"],5,0.6,16,10] } },
    { "id": "road", "type": "line", "source": "osm", "source-layer": "transportation",
      "paint": { "line-color": "#c7d0ff", "line-width": ["interpolate",["linear"],["zoom"],5,0.3,16,8] } },
    { "id": "tracks", "type": "line", "source": "osm", "source-layer": "transportation",
      "filter": ["in","class","path","track"],
      "paint": { "line-color": "#51607a", "line-width": ["interpolate",["linear"],["zoom"],12,0.6,16,2] } },
    { "id": "waterway", "type": "line", "source": "osm", "source-layer": "waterway",
      "paint": { "line-color": "#2a3d57", "line-width": ["interpolate",["linear"],["zoom"],10,0.3,16,2] } },
    { "id": "place-label", "type": "symbol", "source": "osm", "source-layer": "place_label",
      "layout": { "text-field": "{name}", "text-size": ["interpolate",["linear"],["zoom"],5,10,12,14] },
      "paint": { "text-color": "#dfe6ff", "text-halo-color": "#0f1115", "text-halo-width": 1.2 } }
  ]
}
